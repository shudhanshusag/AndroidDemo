<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TO DO LIST"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@color/grey"
        android:layout_marginEnd="@dimen/cardview_default_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvTaskItem1"
    android:layout_marginBottom="@dimen/cardview_default_elevation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Watch IPL"
                android:textStyle="bold"
                android:textSize="25sp"
                />

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 2:30"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvTaskItem2"
    android:layout_marginBottom="@dimen/cardview_default_elevation"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit VW Showroom"
                android:textStyle="bold"
                android:textSize="25sp"
                />

            <CheckBox
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 5:30"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"
                />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabToDoAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="40dp"
        android:backgroundTint="@color/green"
        android:src="@drawable/baseline_add_24"
        android:tint="@color/black"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>

